<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86ABBA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingFragment">

    <ImageView
        android:id="@+id/setting_circle_background"
        android:layout_width="750dp"
        android:layout_height="750dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="-45dp"
        android:src="@drawable/circle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_app_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="120dp"
        android:text="App Setting"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/time_pick_background"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/projects_background"
        app:layout_constraintTop_toBottomOf="@id/title_app_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/sub_title_activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:text="Activity Time"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/time_pick_background"
        app:layout_constraintStart_toStartOf="@id/time_pick_background"/>

    <ImageView
        android:id="@+id/time_pick_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/watch"
        app:tint = "#8B86BE"
        app:layout_constraintTop_toTopOf="@id/sub_title_activity_time"
        app:layout_constraintBottom_toBottomOf="@id/time_pick_background"
        app:layout_constraintStart_toStartOf="@id/time_pick_background"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField1"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/sub_title_activity_time"
        app:layout_constraintBottom_toBottomOf="@id/time_pick_background"
        app:layout_constraintStart_toEndOf="@id/time_pick_icon"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hour_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07"
            android:textSize="13sp"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="2"
            android:maxLines="1"
            android:gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text=":"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/outlinedTextField1"
        app:layout_constraintEnd_toStartOf="@id/outlinedTextField2"
        app:layout_constraintTop_toTopOf="@id/sub_title_activity_time"
        app:layout_constraintBottom_toBottomOf="@id/time_pick_background"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField2"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/sub_title_activity_time"
        app:layout_constraintBottom_toBottomOf="@id/time_pick_background"
        app:layout_constraintStart_toEndOf="@id/outlinedTextField1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/minute_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="13sp"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="2"
            android:maxLines="1"
            android:gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/support_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="~"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/outlinedTextField2"
        app:layout_constraintTop_toTopOf="@id/sub_title_activity_time"
        app:layout_constraintBottom_toBottomOf="@id/time_pick_background"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField3"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/sub_title_activity_time"
        app:layout_constraintBottom_toBottomOf="@id/time_pick_background"
        app:layout_constraintStart_toEndOf="@id/support_time"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hour_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21"
            android:textSize="13sp"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="2"
            android:maxLines="1"
            android:gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text=":"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/outlinedTextField3"
        app:layout_constraintEnd_toStartOf="@id/outlinedTextField4"
        app:layout_constraintTop_toTopOf="@id/sub_title_activity_time"
        app:layout_constraintBottom_toBottomOf="@id/time_pick_background"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField4"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/sub_title_activity_time"
        app:layout_constraintBottom_toBottomOf="@id/time_pick_background"
        app:layout_constraintStart_toEndOf="@id/outlinedTextField3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/minute_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="13sp"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="2"
            android:maxLines="1"
            android:gravity="center"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/save_setting_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:backgroundTint="#8B86BE"
        android:text="Save All"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_setting_background"
        app:layout_constraintBottom_toBottomOf="parent"/>

