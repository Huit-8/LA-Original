<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86ABBA"
    tools:context=".ProjectActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="40dp"
        android:elevation="4dp"
        app:menu="@menu/projects_top_app_bar"
        android:background="#8B86BE"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/circle_background"
        android:layout_width="750dp"
        android:layout_height="750dp"
        android:layout_marginStart="-45dp"
        android:src="@drawable/circle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar" />

    <TextView
        android:id="@+id/project_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Your Project"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="5dp"
        android:text="Project name"
        android:textSize="20dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/project_name_background"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/project_name_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/projects_background"
        app:layout_constraintTop_toTopOf="@id/project_name_field"
        app:layout_constraintBottom_toBottomOf="@id/project_name_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/project_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="プロジェクト名を入力"
        app:layout_constraintTop_toBottomOf="@+id/project_activity_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/project_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="5dp"
        android:text="Due date"
        android:textSize="20dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/due_date_background"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/due_date_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/projects_background"
        app:layout_constraintTop_toBottomOf="@id/project_name_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/calender_pick_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/time_pick_icon"
        app:tint = "#8B86BE"
        app:layout_constraintTop_toTopOf="@id/due_date_background"
        app:layout_constraintBottom_toBottomOf="@id/due_date_background"
        app:layout_constraintStart_toStartOf="@id/due_date_background" />

    <TextView
        android:id="@+id/due_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022/10/02"
        android:textSize="28dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/calender_pick_icon"
        app:layout_constraintBottom_toBottomOf="@id/due_date_background"
        app:layout_constraintTop_toTopOf="@id/due_date_background"
        app:layout_constraintEnd_toEndOf="@id/due_date_background"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#8B86BE"
        android:text="Save and Calculate"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/due_date_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="5dp"
        android:text="Remaining time"
        android:textSize="20dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/remaining_time_background"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/remaining_time_background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/projects_background"
        app:layout_constraintTop_toBottomOf="@id/save_button"/>

    <ImageView
        android:id="@+id/remaining_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/remaining_time"
        app:layout_constraintTop_toTopOf="@id/remaining_time_background"
        app:layout_constraintBottom_toBottomOf="@id/remaining_time_background"
        app:layout_constraintStart_toStartOf="@id/remaining_time_background"/>

    <TextView
        android:id="@+id/remaining_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="30"
        android:textSize="70sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/remaining_time_background"
        app:layout_constraintBottom_toBottomOf="@id/remaining_time_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="hours"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/remaining_time_text"
        app:layout_constraintStart_toEndOf="@id/remaining_time_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>